<div class="row">
    <div class="col-3">
        <%= render 'sidebar' %>
    </div>

    <div class="col-9">
        <div class="card">
            <div class="card-header">
                Description
            </div>
            <div class="card-body">
                <%= form_for(@listing) do |f| %>
                    
                    <%= f.label :listing_name %><%= f.text_field :listing_name, class: "form-control" %>
                      
                    <%= f.label :listing_description , class: "mt-3" %><%= f.text_field :listing_description, class: "form-control" %>

                    <%= f.submit "Save", class: "btn btn-block btn-success mt-3"%>
                    
                <% end %>
            </div>
        </div>
    </div>

</div>