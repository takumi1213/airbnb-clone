<%= provide(:title,"Your Listings")%>

<div class="row">
    <div class="col-2">
        <%= link_to "Manage Listings", listings_path, class: "btn btn-outline-primary mr-3 w-100" %>
        <button type="button" class="btn btn-outline-primary mr-3 w-100 my-3">Your Reservation</button>
        <button type="button" class="btn btn-outline-primary mr-3 w-100">Go Trip</button>
    </div>

    <div class="col-10">
        <div class="row">
            <div class="col-6">
                 <h2>Your Listings</h2>
            </div>
            <div class="offset-3">
                <%= link_to raw("Add a new Listings <i class='fa fa-pen'></i>") , new_listing_path ,class: "btn btn-primary" %>
            </div>
        </div>
        <div class="row">
            <table class="table table-hover mt-3">
                <thead class="text-center">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Listing name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Review</th>
                        <th colspan="3">Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <% @listings.each do |listing| %>
                        <tr>
                            <% if listing.images.present? %>
                                <td><%= image_tag listing.images.first.image, style: "width: 100px; height: 100px;" %></td>
                            <% else %> 
                                <td>No images</td>
                            <% end %>
                            <td><%= listing.listing_name %></td>
                            <td><%= listing.price %></td>
                            <td></td>
                            <td><%= link_to raw(" <i class='fas fa-poo fa-rotate-90'></i> View Listing"), listing_path(listing), class: "text-primary" %></td>
                            <td><%= link_to raw("<i class='fas fa-edit'></i> edit"), listing_listing_path(listing), class:"text-info" %></td>
                            <td><%= link_to raw("<i class='fas fa-trash-alt'></i> Delete"), listing_path(listing),method: :delete,data: { confirm: "Are you sure?" }, class:"text-danger" %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= will_paginate(@listings) %>
        </div>
    </div>

</div>


    
