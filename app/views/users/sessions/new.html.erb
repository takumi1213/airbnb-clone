<% provide(:title, "Log in") %>
<h2 class="text-center">Log in</h2>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"w-100" , placeholder: "E-mail" %>
        </div>

        <div class="field mt-3">
            <%= f.password_field :password, autocomplete: "current-password" ,class:"w-100" , placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? %>
            <div class="field mt-3">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
            </div>
        <% end %>

        <div class="actions my-3">
            <%= f.submit "Log in" ,class:"w-100 btn-primary" %>
        </div>
        <% end %>

        Haven't created an account?<%= render "users/shared/links" %>

    </div>
</div>
